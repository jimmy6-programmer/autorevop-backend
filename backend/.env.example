# Auto RevOp Backend Email Configuration
# Copy this file to .env and fill in your actual values

# Email Service Configuration (REQUIRED)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-business-email@gmail.com
EMAIL_PASS=your-app-password

# Alternative Email Services (uncomment and configure as needed)
# For Outlook/Hotmail
# EMAIL_HOST=smtp-mail.outlook.com
# EMAIL_PORT=587
# EMAIL_USER=your-business-email@outlook.com
# EMAIL_PASS=your-password

# For SendGrid (recommended for production)
# EMAIL_HOST=smtp.sendgrid.net
# EMAIL_PORT=587
# EMAIL_USER=apikey
# EMAIL_PASS=your-sendgrid-api-key

# For Mailgun
# EMAIL_HOST=smtp.mailgun.org
# EMAIL_PORT=587
# EMAIL_USER=postmaster@your-domain.mailgun.org
# EMAIL_PASS=your-mailgun-password

# Application Settings
NODE_ENV=production
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
PORT=5000

# Database Configuration (REQUIRED)
DATABASE_URL=mongodb+srv://username:password@cluster.mongodb.net/autorevop?retryWrites=true&w=majority

# Alternative Database Options
# DATABASE_URL=postgresql://username:password@localhost:5432/autorevop
# DATABASE_URL=mysql://username:password@localhost:3306/autorevop

# CORS Settings
FRONTEND_URL=https://your-frontend-domain.com
ALLOWED_ORIGINS=https://your-frontend-domain.com,http://localhost:3000

# File Upload Settings (Optional)
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Logging (Optional)
LOG_LEVEL=info